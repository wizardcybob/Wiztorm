{% extends "base.twig" %}

{% block main %}
<input style="margin: 1rem;" id="searchbar" onkeyup="barre_recherche()" type="text" name="search" placeholder="Recherche" hidden>

<div class="bloc_general">
    {% for tab in plusieurs_cat %}
    <div class="bloc_general_unique">
        <a href="index.php?page=categorie&action=read&id={{tab.id_categorie}}">
        <img class="bloc_general_unique__img" src="{{ tab.photo_categorie }}" alt="">
        <h4 class="bloc_general_unique__titre">{{ tab.nom_categorie }}</h4>
        </a>
    </div>
    {% endfor %}
</div>


{% endblock %}